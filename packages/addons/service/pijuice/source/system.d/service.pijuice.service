[Unit]
Description=PiJuice status service
Requires=dev-i2c\x2d1.device
After=dev-i2c\x2d1.device

[Service]
Type=idle
ExecStart=/storage/.kodi/addons/service.pijuice/bin/pijuice_sys.py
ExecStopPost=/storage/.kodi/addons/service.pijuice/bin/pijuice_sys.py stop
Restart=always

[Install]
WantedBy=multi-user.target
